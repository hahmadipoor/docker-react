sudo: required

services:
  - docker

before_install:
  - docker build -t excel61/docker-react-test -f Dockerfile.dev .
script:
  - docker run excel61/docker-react-test npm test -- --coverage

after_success:
  - docker build -t excel61/docker-react .
  - echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_ID" --password-stdin
  - docker push excel61/docker-react
  